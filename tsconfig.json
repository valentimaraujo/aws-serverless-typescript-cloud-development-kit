{
  "compilerOptions": {
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "outDir": "lib",
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/productsLayer": [
        "lambda/products/layers/productsLayer/nodejs/productRepository"
      ],
      "/opt/nodejs/productEventsLayer": [
        "lambda/products/layers/productEventsLayer/nodejs/productEvent"
      ],
      "/opt/nodejs/ordersLayer": [
        "lambda/orders/layers/ordersLayer/nodejs/orderRepository"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
